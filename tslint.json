{
    "extends": "tslint-config-airbnb",
    "rules": {
      "import-name": false,
      "max-line-length": [
        true,
        120
      ],
      "function-name": "never",
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "never",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "singleline": "never"
        }
      ],
      "align": [
        true,
        "statements"
      ]
    }
  }
  